{
  "name": "kawakawa-cx",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@kawakawa/web",
    "dev:api": "turbo run dev --filter=@kawakawa/api",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@kawakawa/web",
    "build:api": "turbo run build --filter=@kawakawa/api",
    "generate": "turbo run generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.6.2",
    "prettier": "^3.7.4",
    "turbo": "^2.3.0",
    "typescript-eslint": "^8.48.1"
  }
}
