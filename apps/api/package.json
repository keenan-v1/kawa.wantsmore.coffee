{
  "name": "@kawakawa/api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch --include=src/** --env-file-if-exists=.env src/index.ts",
    "dev:debug": "tsx watch --inspect --env-file-if-exists=.env src/index.ts",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node dist/index.js",
    "tsoa:generate": "tsoa spec-and-routes",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "node dist/scripts/db-migrate.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --env-file-if-exists=.env src/db/seed.ts",
    "db:init": "tsx --env-file-if-exists=.env src/scripts/db-init-idempotent.ts",
    "fio:sync": "tsx --env-file-if-exists=.env src/scripts/sync-fio.ts",
    "fio:sync:commodities": "tsx --env-file-if-exists=.env src/scripts/sync-fio.ts commodities",
    "fio:sync:locations": "tsx --env-file-if-exists=.env src/scripts/sync-fio.ts locations",
    "fio:sync:stations": "tsx --env-file-if-exists=.env src/scripts/sync-fio.ts stations",
    "fio:sync:prices": "tsx --env-file-if-exists=.env src/scripts/sync-fio.ts prices",
    "fio:sync:users": "tsx --env-file-if-exists=.env src/scripts/sync-all-users.ts",
    "admin:create": "tsx --env-file-if-exists=.env src/scripts/create-admin.ts",
    "admin:password": "tsx --env-file-if-exists=.env src/scripts/admin-password.ts",
    "admin:add-role": "tsx --env-file-if-exists=.env src/scripts/admin-add-role.ts",
    "admin:rm-role": "tsx --env-file-if-exists=.env src/scripts/admin-rm-role.ts",
    "db:drop": "tsx --env-file-if-exists=.env src/scripts/drop-all-tables.ts",
    "db:mock-data": "tsx --env-file-if-exists=.env src/scripts/load-mock-data.ts"
  },
  "dependencies": {
    "@kawakawa/types": "workspace:*",
    "@tsoa/runtime": "^6.4.0",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.44.7",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "postgres": "^3.4.7",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.9.0",
    "@types/pg": "^8.15.6",
    "@types/pino-http": "^6.1.0",
    "@types/swagger-ui-express": "^4.1.6",
    "@vitest/ui": "^4.0.14",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.19.0",
    "typescript": "~5.3.0",
    "vitest": "^4.0.14"
  }
}
