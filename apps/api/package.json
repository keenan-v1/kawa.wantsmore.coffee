{
  "name": "@kawakawa/api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "concurrently \"tsoa spec-and-routes\" \"tsx watch src/index.ts\"",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node dist/index.js",
    "generate": "tsoa spec-and-routes",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@kawakawa/types": "workspace:*",
    "@tsoa/runtime": "^6.4.0",
    "drizzle-orm": "^0.44.7",
    "express": "^4.21.0",
    "postgres": "^3.4.7",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.9.0",
    "@types/pg": "^8.15.6",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.19.0",
    "typescript": "~5.3.0"
  }
}
